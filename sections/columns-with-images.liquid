<div class="product-section">
  <div class="product-columns">
    {% for block in section.blocks %}
      <div class="product-column">
        <img src="{{ block.settings.image | img_url: 'medium' }}" width="200" height="200" alt="{{ block.settings.image.alt }}">
        <h3>{{ block.settings.title }}</h3>
        <p>{{ block.settings.text }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "ðŸ”¨Columns with Images",
    "settings": [
      {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text"
    }
    ]
  }
{% endschema %}