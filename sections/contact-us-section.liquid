      "label": "Section Background Desktop"
    },
    {
      "type": "image_picker",
      "id": "section_bg_mobile",
      "label": "Section Background Mobile"
    },
    {
      "type": "textarea",
      "id": "image_alt",
      "label": "Image Alt Tag"
    }
  ],
  "presets": [
    {
      "name": "ðŸ‘¾Contact Us Section"
    }
  ]
}
{% endschema %}

<style>
  .contact-us-section {
    background: url('{{ section.settings.section_bg_desktop }}');
  }
  @media screen and (max-width: 768px) {
    .contact-us-section {
      background: url('{{ section.settings.section_bg_mobile }}');
    }
  }
</style>