{{ 'custom-test-our-program.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <div class="test-our-program">
    <div class="test-our-program-info">
      <h2 class="test-our-program-info__title">{{ section.settings.section_title }}</h2>
      <p class="test-our-program-info__text">{{ section.settings.section_text }}</p>
      <a class="test-our-program-info__button" style="background-color: {{ section.settings.main_color }}" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
    </div>
    <div class="test-our-program-images">
      <div class="test-our-program-images__conatiner">
        <img class="test-our-program-images__image" src="{{ section.settings.first_image | img_url: 'original' }}" width="" height="" alt="{{ section.settings.section_title }}">
      </div>
      <div class="test-our-program-images__conatiner">
        <img class="test-our-program-images__image" src="{{ section.settings.second_image | img_url: 'original' }}" width="" height="" alt="{{ section.settings.section_title }}">
      </div>
    </div>
  </div>
</div>

