      "name": "ðŸ‘¾Slider Section"
    }
  ]
}
{% endschema %}

<script>
    document.addEventListener("DOMContentLoaded", function() {
    const slider = document.querySelector('.section-slider');
    const slides = document.querySelectorAll('.section-slider__slide');
    const prevBtn = document.querySelector('.section-slider__prev');
    const nextBtn = document.querySelector('.section-slider__next');
    const visibleSlides = 3; // ÐšÐ¾Ð»Ð¸Ñ‡ÐµÑÑ‚Ð²Ð¾ Ð²Ð¸Ð´Ð¸Ð¼Ñ‹Ñ… ÑÐ»Ð°Ð¹Ð´Ð¾Ð²
    const slideWidth = slides[0].clientWidth;
    const totalSlides = slides.length;
    let currentIndex = 0;

    function updateSliderSize() {
        slider.style.width = `${slideWidth * visibleSlides}px`;
        slider.style.transform = `translateX(${-currentIndex * slideWidth}px)`;
    }

    function slideNext() {
        currentIndex += visibleSlides;
        if (currentIndex >= totalSlides) {
            currentIndex = 0;
        }
        slider.style.transform = `translateX(${-currentIndex * slideWidth}px)`;
    }

    function slidePrev() {
        currentIndex -= visibleSlides;
        if (currentIndex < 0) {
            currentIndex = Math.floor(totalSlides / visibleSlides) * visibleSlides;
        }
        slider.style.transform = `translateX(${-currentIndex * slideWidth}px)`;
    }

    prevBtn.addEventListener('click', slidePrev);
    nextBtn.addEventListener('click', slideNext);

    // ÐžÐ±Ð½Ð¾Ð²Ð»ÑÐµÐ¼ Ñ€Ð°Ð·Ð¼ÐµÑ€ ÑÐ»Ð°Ð¹Ð´ÐµÑ€Ð° Ð¿Ñ€Ð¸ Ð·Ð°Ð³Ñ€ÑƒÐ·ÐºÐµ Ð¸ Ð¸Ð·Ð¼ÐµÐ½ÐµÐ½Ð¸Ð¸ Ñ€Ð°Ð·Ð¼ÐµÑ€Ð° Ð¾ÐºÐ½Ð°
    window.addEventListener('load', updateSliderSize);
    window.addEventListener('resize', updateSliderSize);
});

</script>